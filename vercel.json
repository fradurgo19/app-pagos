{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "backend/server.js": {
      "includeFiles": "node_modules/nodemailer/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}

